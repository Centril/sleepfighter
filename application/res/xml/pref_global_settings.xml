<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <CheckBoxPreference
        android:key="pref_alarm_turn_screen_on"
        android:title="@string/pref_alarm_turn_screen_on"
        android:summary="@string/pref_alarm_turn_screen_on_summary"
        android:defaultValue="true" />

    <CheckBoxPreference
        android:key="pref_alarm_bypass_lock_screen"
        android:title="@string/pref_alarm_bypass_lock_screen"
        android:summary="@string/pref_alarm_bypass_lock_screen_summary"
        android:defaultValue="true" />
    
    <CheckBoxPreference 
        android:key="pref_global_when_or_in_how_much"
        android:title="Display when next alarm rings"
        android:summary="Shows when the next alarm will ring rather than in how much time"
        android:defaultValue="false" />
    
    <PreferenceCategory android:title="@string/pref_about" >
        <Preference
            android:title="@string/pref_version"
            android:summary="@string/version_name" />
    </PreferenceCategory>

</PreferenceScreen>
