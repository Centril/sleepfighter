<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="se.chalmers.dat255.sleepfighter"
    android:versionCode="4"
    android:versionName="1.0" >

    <uses-sdk	
        android:minSdkVersion="9"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.CAMERA" />
	<uses-feature android:name="android.hardware.camera" />

    <!-- START	Google Maps Android API v2 -->
	<uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
	<uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES"/>
	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
	<uses-feature android:glEsVersion="0x00020000" android:required="true"/>
	<permission android:name="se.chalmers.dat255.sleepfighter.permission.MAPS_RECEIVE" android:protectionLevel="signature" />
	<uses-permission android:name="se.chalmers.dat255.sleepfighter.permission.MAPS_RECEIVE" />
    <!-- END	Google Maps Android API v2 -->

    <application
        android:name="se.chalmers.dat255.sleepfighter.SFApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:hardwareAccelerated="true"
        android:theme="@style/AppTheme" >

    	<!-- START	GPS related stuff -->
    	<!-- START	Google Maps Android API v2 -->
		<meta-data android:name="com.google.android.maps.v2.API_KEY" android:value="AIzaSyB7342NDGWqblGnheVBFQ7Po3xaUcQEESw"/>
    	<!-- END	Google Maps Android API v2 -->
        <activity
            android:name="se.chalmers.dat255.sleepfighter.activity.ManageGPSFilterAreasActivity"
            android:label="@string/title_activity_manage_gpsfilter_areas" >
        </activity>
        <activity
            android:name="se.chalmers.dat255.sleepfighter.activity.EditGPSFilterAreaActivity"
            android:label="@string/title_activity_manage_gpsfilter_areas"
            android:parentActivityName="se.chalmers.dat255.sleepfighter.activity.EditGPSFilterAreaActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="se.chalmers.dat255.sleepfighter.activity.EditGPSFilterAreaActivity" />
        </activity>
        <receiver android:name="se.chalmers.dat255.sleepfighter.receiver.GPSFilterRefreshReceiver" />
             <receiver android:name="se.chalmers.dat255.sleepfighter.receiver.LocationReceiver" />
   
    	<!-- END	GPS related stuff -->

        <activity
            android:name="se.chalmers.dat255.sleepfighter.activity.MainActivity"
            android:label="@string/app_name" 
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="se.chalmers.dat255.sleepfighter.activity.GlobalSettingsActivity"
            android:label="@string/title_activity_global_settings"
            android:parentActivityName="se.chalmers.dat255.sleepfighter.activity.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="se.chalmers.dat255.sleepfighter.activity.MainActivity" />
        </activity>

        <!-- START: Alarm settings related activities -->
        <activity
            android:name="se.chalmers.dat255.sleepfighter.activity.AlarmSettingsActivity"
            android:label="@string/title_activity_alarm_settings"
            android:parentActivityName="se.chalmers.dat255.sleepfighter.activity.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="se.chalmers.dat255.sleepfighter.activity.MainActivity" />
        </activity>
        <activity
            android:name="se.chalmers.dat255.sleepfighter.activity.RingerSettingsActivity"
            android:label="@string/title_alarm_ringer_settings"
            android:parentActivityName="se.chalmers.dat255.sleepfighter.activity.AlarmSettingsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="se.chalmers.dat255.sleepfighter.activity.AlarmSettingsActivity" />
        </activity>

        <activity
            android:name="se.chalmers.dat255.sleepfighter.activity.ChallengeSettingsActivity"
            android:label="@string/title_alarm_challenge_settings"
            android:parentActivityName="se.chalmers.dat255.sleepfighter.activity.AlarmSettingsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="se.chalmers.dat255.sleepfighter.activity.AlarmSettingsActivity" />
        </activity>

        <activity
            android:name="se.chalmers.dat255.sleepfighter.activity.ChallengeParamsSettingsActivity"
            android:label="@string/title_alarm_challenge_settings"
            android:parentActivityName="se.chalmers.dat255.sleepfighter.activity.ChallengeSettingsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="se.chalmers.dat255.sleepfighter.activity.ChallengeSettingsActivity" />
        </activity>

        <activity
            android:name="se.chalmers.dat255.sleepfighter.activity.PlaylistSelectActivity"
            android:label="@string/title_activity_playlist_select" >
        </activity>

        <!-- END: Alarm settings related activities -->

        <receiver android:name="se.chalmers.dat255.sleepfighter.receiver.AlarmReceiver" >
        </receiver>

        <activity
            android:name="se.chalmers.dat255.sleepfighter.activity.AlarmActivity"
            android:label="@string/app_name"
            android:showOnLockScreen="true" 
            android:launchMode="singleTop" >
        </activity>

        <service android:name="se.chalmers.dat255.sleepfighter.service.AlarmPlannerService"></service>
        <service android:name="se.chalmers.dat255.sleepfighter.service.LocationService"></service>
        <service android:name="se.chalmers.dat255.sleepfighter.service.FadeVolumeService"></service>
        
        <receiver android:name="se.chalmers.dat255.sleepfighter.receiver.AlarmRebootSetter">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity
            android:name="se.chalmers.dat255.sleepfighter.activity.ChallengeActivity"
            android:label="@string/pre_chal_act" >
        </activity>
       
        <service
            android:name="se.chalmers.dat255.sleepfighter.audio.AudioService"
            android:exported="false" >
            <intent-filter>
                <action android:name="se.chalmers.dat255.sleepfighter.audio.AudioService.PLAY_TRACK" />
                <action android:name="se.chalmers.dat255.sleepfighter.audio.AudioService.STOP" />
                <action android:name="se.chalmers.dat255.sleepfighter.audio.AudioService.VOLUME" />
                <action android:name="se.chalmers.dat255.sleepfighter.audio.AudioService.PLAY_PLAYLIST" />
            </intent-filter>
        </service>
    </application>

</manifest>