<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="se.chalmers.dat255.sleepfighter"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:name="se.chalmers.dat255.sleepfighter.SFApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="se.chalmers.dat255.sleepfighter.activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="se.chalmers.dat255.sleepfighter.activities.GlobalSettingsActivity"
            android:label="@string/title_activity_global_settings"
            android:parentActivityName="se.chalmers.dat255.sleepfighter.activities.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="se.chalmers.dat255.sleepfighter.activities.MainActivity" />
        </activity>

        <!-- START: Alarm settings related activities -->
        <activity
            android:name="se.chalmers.dat255.sleepfighter.activities.AlarmSettingsActivity"
            android:label="@string/title_activity_alarm_settings"
            android:parentActivityName="se.chalmers.dat255.sleepfighter.activities.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="se.chalmers.dat255.sleepfighter.activities.MainActivity" />
        </activity>
        <activity
            android:name="se.chalmers.dat255.sleepfighter.activities.RingerSettingsActivity"
            android:label="@string/title_alarm_ringer_settings"
            android:parentActivityName="se.chalmers.dat255.sleepfighter.activities.AlarmSettingsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="se.chalmers.dat255.sleepfighter.activities.AlarmSettingsActivity" />
        </activity>

        <!-- END: Alarm settings related activities -->

        <receiver android:name="se.chalmers.dat255.sleepfighter.activities.AlarmReceiver" >
        </receiver>

        <activity
            android:name="se.chalmers.dat255.sleepfighter.activities.AlarmActivity"
            android:label="@string/app_name"
            android:showOnLockScreen="true" >
        </activity>

        <service android:name="se.chalmers.dat255.sleepfighter.activities.AlarmPlannerService"></service>

        <receiver android:name="se.chalmers.dat255.sleepfighter.activities.AlarmRebootSetter" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity
            android:name="se.chalmers.dat255.sleepfighter.activities.ChallengeActivity"
            android:label="@string/pre_chal_act" >
        </activity>
        <activity
            android:name="se.chalmers.dat255.sleepfighter.activities.SimpleMathActivity"
            android:label="@string/math_chal_act" >
        </activity>        
        <activity
            android:name="se.chalmers.dat255.sleepfighter.activities.MemoryActivity"
            android:label="memory" >
        </activity>
    </application>

</manifest>
