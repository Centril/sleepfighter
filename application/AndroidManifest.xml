<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="se.chalmers.dat255.sleepfighter"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name="se.chalmers.dat255.sleepfighter.activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="se.chalmers.dat255.sleepfighter.activities.AlarmSettingsActivity"
            android:label="@string/title_activity_alarm_settings"
            android:parentActivityName="se.chalmers.dat255.sleepfighter.activities.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="se.chalmers.dat255.sleepfighter.activities.MainActivity" />
        </activity>

		<receiver android:name="se.chalmers.dat255.sleepfighter.activities.AlarmReceiver"></receiver>

        <activity
            android:name="se.chalmers.dat255.sleepfighter.activities.AlarmActivity"
           android:label="@string/app_name"
            android:showOnLockScreen="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
