<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/mainLayoutBottom"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/main_layout_bottom"
        android:orientation="horizontal" 
        android:padding="0dp"
        android:layout_margin="0dp">

        <ImageView
            android:id="@+id/challenge_toggle"
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:adjustViewBounds="true"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/challenge_toggle_content_desc" />

        <View style="@style/HDivider"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:gravity="center"
            tools:ignore="UseCompoundDrawables">
            
	        <TextView
	            android:id="@+id/mainChallengePoints"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@android:color/primary_text_dark"
	            android:textSize="18sp"
	            android:textStyle="bold" />
	        
	        <ImageView
	            android:id="@+id/challenge_points_icon"
	            android:adjustViewBounds="true"
	            android:layout_height="18dp"
	            android:layout_width="18dp"
	            android:contentDescription="@string/challenge_points" />
        </LinearLayout>

        <View style="@style/HDivider"/>

        <TextView
            android:id="@+id/earliestTimeText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@android:color/primary_text_dark"
            android:textIsSelectable="false"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="3"
            android:gravity="center"
            android:layout_margin="5dp" />
</LinearLayout>